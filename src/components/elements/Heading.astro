---
// Librerias
import { twMerge } from "tailwind-merge";

interface Props {
  tagType: string;
  hClass: "h1" | "h2" | "h3" | "h4";
  hClassBase?: string[];
  classes?: string;
}

const {
  tagType,
  hClass,
  hClassBase = [
    "font-bold",
    "text-skin-hdng-base",
    "dark:text-skin-hdng-base-dark",
    "text-center mx-auto",
  ],
  classes,
} = Astro.props;

const Tag = tagType;

const hClasses = {
  h1: "text-4xl capitalize sm:text-5xl",
  h2: "text-2xl sm:text-3xl",
  h3: "text-xl sm:text-2xl",
  h4: "text-base",
};
---

<Tag class:list={twMerge([hClassBase, hClasses[hClass], classes])}>
  <slot />
</Tag>
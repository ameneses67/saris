---
// Librer√≠as
import { Image } from "astro:assets";

interface Props {
	id: number;
	title: string;
	price: number;
	description: string;
	category: string;
	image: string;
}

const { id, title, price, description, category, image } = Astro.props;
---

<div
	class="border border-slate-200 rounded-lg shadow-lg flex flex-col xs:gap-4 bg-white"
	data-id={id}
	data-category={category}
>
	<div class="h-72 pt-4 xs:pt-8 md:pt-4 lg:pt-8">
		<Image
			src={image}
			alt={title}
			width={200}
			height={300}
			format="avif"
			class="h-full w-auto mx-auto"
		/>
	</div>
	<div class="p-4 xs:p-8 md:p-4 lg:p-8 grow flex flex-col justify-between">
		<div class="space-y-3">
			<h3 class="text-3xl font-bold">{title}</h3>
			<p>{description}</p>
		</div>
		<p class="text-2xl mt-6">
			<span class="font-semibold mr-2">Precio:</span>${price.toFixed(2)}
		</p>
	</div>
</div>
